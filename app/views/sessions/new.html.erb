<% provide :title, t("log_in")%>
<h1><%= t "log_in" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session, url: login_path, local: true do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t(".pass")%>
      <%= link_to t(".forget_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_me" %></span>
      <% end %>

      <%= f.submit t("log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t ".new_user" %><%= link_to t("sign_up_now"), signup_path %></p>
  </div>
</div>
